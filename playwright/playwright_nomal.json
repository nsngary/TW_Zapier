{
  "target": {
    "url": "https://nomal.jp/",
    "routes": ["/", "/pricing"],
    "viewport": { "width": 1330, "height": 1004 },
    "device": "Desktop",
    "locale": "zh-TW",
    "timezone": "Asia/Taipei",
    "colorScheme": "light",
    "reducedMotion": "no-preference",
    "network": { "throttle": "none", "offline": false },
    "geolocation": null,
    "permissions": [],
    "cookies": [],
    "storageSeed": {}
  },
  "elements": [
    {
      "name": "hero-floating",
      "selector": ".hero .float-item",
      "altSelectors": ["[data-hero-float]"],
      "anchorSelector": ".hero",
      "group": true
    }
  ],
  "flows": [
    { "step": "scroll", "from": 0, "to": 2000, "step": 100, "wait": "none" },
    { "step": "hover", "selector": "header nav [data-menu='products']" },
    { "step": "click", "selector": "a[href*='pricing']", "waitFor": "main" },
    { "step": "back" }
  ],
  "sampling": {
    "mode": ["scroll", "time"],
    "time": { "durationMs": 3000, "fps": 30 },
    "observe": { "waapi": true, "gsap": true, "intersection": true, "mutation": true }
  },
  "capture": {
    "screenshots": ["hero", "pricing", "footer"],
    "trace": true,
    "har": true
  },
  "output": {
    "savePath": "./analysis/example-hero.json",
    "rawJson": true,
    "generate": ["gsap", "css-keyframes"]
  }
}
